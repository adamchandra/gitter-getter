#!/bin/bash

SOURCE="BASH_SOURCE[0]"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
    DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
SCRIPTDIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
SCRIPT=`basename $0`

showhelp() {
    echo "Usage: $SCRIPT: "
    echo "  todo  "
    exit 2
}

# default arg vals
file=
output=

while getopts "f:o:h" name; do
    case $name in
        f)    file=$OPTARG;;
        o)    output=$OPTARG;;
        h)    showhelp $0;;
        [?])  showhelp $0;;
    esac
done

if [ -z "$file" ]; then
    echo "No input file specified: -f input"
    exit 1
fi

if [ -z "$output" ]; then
    echo "No output file specified: -o output"
    exit 1
fi



cat $file |\
    egrep '("text"|"displayName")' |\
    perl -pne 's/"displayName" *: "([^"]+)".*$/-\1\n\n/g' |\
    perl -pne 's/^\ +"text" *: "/â”Š /g' |\
    perl -pne 's/",//g' |\
    perl -pne 's/\\n/\nâ”Š /g' > $output
